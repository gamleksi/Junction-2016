<h2 class="page-header"></h2>
{{#if errors}}
	{{#each errors}}
		<div class = "alert alert-danger"> {{msg}}</div>
	{{/each}}
{{/if}}

<form method="post" action="/users/register">
	<!-- firstname: String, -->

	<div class="form-group">
		<label>First Name</label>
		<input type="text" class="form-control" placeholder="first name" name="firstname">
	</div>
	<!-- lastname: String, -->

	<div class="form-group">
		<label>Lastname</label>
		<input type="text" class="form-control" placeholder="lastname" name="lastname">
	</div>
	<!-- age: {type: 'integer'}, -->
	<div class="form-group">
		<label>Age</label>
		<input type="number" class="form-control" placeholder="99" name="age">
	</div>	
	<!-- email: {type:"text", key: true}, -->
	<div class="form-group">
		<label>Email</label>
		<input type="email" class="form-control" placeholder="hacker@hackjunction.com" name="email">
	</div>	
	<!-- country: String, -->
	<div class="form-group">
		<label>Home Country</label>
		<input type="text" class="form-control" placeholder="Finland" name="country">
	</div>	
	<!-- gender: ["male", "female","other"], -->
	<div class="form-group">
		<label>Gender</label><br>
		 <input type="radio" name="gender" value="male" > Male<br>
		 <input type="radio" name="gender" value="female"> Female<br>
		 <input type="radio" name="gender" value="other"> Other<br>
	</div>	
	<!-- shirtsize: ["xs","s","m","l","xl","xxl"], -->
	<div class="form-group">
		<label>Shirt size</label><br>
		 <input type="radio" name="shirt" value="xs" >XS<br>
		 <input type="radio" name="shirt" value="s"> S<br>
		 <input type="radio" name="shirt" value="m"> M<br>
 		 <input type="radio" name="shirt" value="l"> L<br>
 		 <input type="radio" name="shirt" value="xl"> XL<br>
 		 <input type="radio" name="shirt" value="xxl"> XXL<br>
	</div>	
	<!-- dietary: ["no","veg","pork","glut"], -->
	<div class="form-group">
		<label>Dietary restrictions</label><br>
		 <input type="radio" name="dietary" value="no" > No special restrictions<br>
		 <input type="radio" name="dietary" value="veg" > Vegan<br>
		 <input type="radio" name="dietary" value="glut" > Gluten free<br>
		 <input type="radio" name="dietary" value="pork" > No pork<br>
	</div>	
	<!-- track:["junkkari","ultrahack"], -->
	<div class="form-group">
		<label>First track choice</label><br>
		 <input type="radio" name="track" value="junction" > Junction <br>
		 <input type="radio" name="track" value="other" > Other<br>
	</div>	
	<!-- portfolio:String, -->
	<div class="form-group">
		<label>Portfolio (Github, Gitlab etc.)</label>
		<input type="text" class="form-control" placeholder="github.com/junction_hcker" name="portfolio">
	</div>
	<!-- question1:String, -->
	<div class="form-group">
		<label>Question 1 </label>
		<textarea type="textarea" class="form-control" placeholder="" name="q1"></textarea>
	</div>	
	<!-- question2:String, -->
	<div class="form-group">
		<label>Question 2</label>
		<textarea type="textarea" class="form-control" placeholder="" name="q2"></textarea>
	</div>
	<!-- comment:String, -->
	<div class="form-group">
		<label>Free comment</label>
		<textarea type="textarea" class="form-control" placeholder="" name="comment"></textarea>
	</div>







<!-- password: String, -->
	<div class="form-group">
		<label>Password</label>
		<input type="password" class="form-control" placeholder="password" name="password">
	</div>

	<div class="form-group">
		<label>Password again</label>
		<input type="password" class="form-control" placeholder="password" name="password2">
	</div>

	<button type="submit" class="btn btn-default">LOGIN</button>
</form>